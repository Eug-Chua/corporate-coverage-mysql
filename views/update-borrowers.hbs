{{#extends "base"}}

{{#block "content"}}
<h1>Update Borrower</h1>
<form method="POST">
    <div class="mb-3">
        <label>Borrower Name</label>
        <input type="text" name="borrower_name" class="form-control" value="{{borrower.borrower_name}}"/>
    </div>
    <div class="mb-3">
        <label>Obligor Risk Rating</label>
        <input type="text" name="risk_rating" class="form-control" value="{{borrower.risk_rating}}"/>
    </div>
    <div class="mb-3">
        <label>Description</label>
        <input type="text" name="description" class="form-control" value="{{borrower.description}}"/>
    </div>
    <input type="submit" value="Update" class="btn btn-primary"/>
</form>
{{/block}}

{{/extends}}